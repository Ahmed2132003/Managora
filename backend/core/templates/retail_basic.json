{
  "roles": [
    {"name": "Manager", "permissions": ["*"]},
    {
      "name": "HR",
      "permissions": ["employees.*", "attendance.*", "leaves.*", "users.view", "hr.employees.*", "hr.documents.*"]
    },
    {
      "name": "Accountant",
      "permissions": ["accounting.*", "expenses.*", "customers.view", "customers.create", "customers.edit"]
    },
    {
      "name": "Employee",
      "permissions": ["expenses.create"]
    }
  ],
  "attendance": {
    "worksites": [
      {"name": "Main Store", "lat": 30.0500, "lng": 31.2333, "radius_meters": 120}
    ],
    "shifts": [
      {"name": "Day Shift", "start_time": "09:00", "end_time": "17:00", "grace_minutes": 0},
      {"name": "Early Shift", "start_time": "03:00", "end_time": "11:00", "grace_minutes": 0}
    ]
  },
  "policies": {
    "rules": [
      {"type": "late_deduction", "threshold_minutes": 10, "amount": 30},
      {"type": "absence_deduction", "amount_per_day": 250}
    ]
  },
  "accounting": {
    "chart_of_accounts_template": "retail_basic",
    "mappings": {
      "payroll_expense": "5200",
      "payroll_payable": "2100",
      "cash": "1000",
      "receivables": "1200",
      "sales": "4000"
    }
  }
}
